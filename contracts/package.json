{
  "name": "contracts",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deployTokenToLocal": "npx hardhat run scripts/deployTokens.ts --network localhost",
    "deployTokenToSepolia": "npx hardhat run scripts/deployTokens.ts --network sepolia",
    "deployTestContractToLocal": "npx hardhat run scripts/deployTestContracts.ts --network localhost",
    "deployContractToLocal": "npx hardhat run scripts/deployContracts.ts --network localhost",
    "deployContractToSepolia": "npx hardhat run scripts/deployContracts.ts --network sepolia",
    "deployContractToScroll": "npx hardhat run scripts/deployContracts.ts --network scroll",
    "approveContractToLocal": "npx hardhat run scripts/api-setup/approveContract.ts --network localhost",
    "approveContractToSepolia": "npx hardhat run scripts/api-setup/approveContract.ts --network sepolia",
    "generate": "hardhat compile && npm run copy-typechain",
    "lint": "npm run lint:eslint && npm run lint:solhint && npm run lint:format",
    "lint:eslint": "eslint . --ext .ts",
    "lint:solhint": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:format": "prettier --write --plugin=prettier-plugin-solidity '**/*.{sol,ts,json,md,yml}'",
    "build": "tsc -p tsconfig.build.json",
    "clean": "del 'artifacts'",
    "setup": "npm run deployTokenToLocal && npm run deployContractToLocal && npm run approveContractToLocal",
    "setup:sepolia": "npm run deployTokenToSepolia && npm run deployContractToSepolia && npm run approveContractToSepolia"
  },
  "keywords": [],
  "author": "",
  "license": "MIT OR Apache-2.0",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "2.0.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "1.0.8",
    "@nomicfoundation/hardhat-toolbox": "4.0.0",
    "@nomicfoundation/hardhat-verify": "2.0.3",
    "@nomiclabs/hardhat-etherscan": "3.1.7",
    "@openzeppelin/hardhat-upgrades": "3.0.2",
    "@prb/math": "^4.0.2",
    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/chai": "4.3.5",
    "@types/dotenv": "8.2.0",
    "@types/mocha": "10.0.1",
    "@types/node": "18.16.16",
    "@typescript-eslint/eslint-plugin": "5.59.8",
    "@typescript-eslint/parser": "5.59.8",
    "chai": "4.3.7",
    "cpy-cli": "^5.0.0",
    "del-cli": "5.0.0",
    "dotenv": "16.1.3",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-xo": "0.43.1",
    "eslint-config-xo-typescript": "0.57.0",
    "ethers": "6.6.4",
    "hardhat": "2.19.3",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-docgen": "^1.3.0",
    "husky": "8.0.3",
    "mocha": "10.2.0",
    "prettier": "2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "3.4.1",
    "solidity-docgen": "^0.6.0-beta.36",
    "ts-node": "10.9.1",
    "typechain": "8.3.2",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "5.0.1",
    "@openzeppelin/contracts-upgradeable": "5.0.1",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0"
  }
}
